acl internal-network {
    192.168.0.0/24;
};
options {
        directory "/var/cache/bind";
        allow-query { localhost; internal-network; };
        allow-transfer { localhost; };
        forwarders { 8.8.8.8; 1.1.1.1;};
        recursion yes;
        dnssec-validation auto;
        listen-on-v6 { any; };
};